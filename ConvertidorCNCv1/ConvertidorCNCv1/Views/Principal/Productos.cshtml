@model List<ServicesCNC.Model.Producto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Productos
                </h1>
                <p class="text-white link-nav"><a href="@Url.Action("Index","Principal")">Inicio </a>  <span class="lnr lnr-arrow-right"></span>  <a href="@Url.Action("Productos","Principal")"> Productos</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start blog Area -->
<section class="blog-area section-gap" id="blog">
    <div class="container">
        <div class="row d-flex justify-content-center">
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 single-blog">
                    <div class="thumb">
                        <img class="img-fluid" src="~/@item.ImagenPortada" alt="">
                    </div>
                    @*<p class="date">@item.Nombre</p>*@
                    <a href="blog-single.html">
                        <h4>
                            @item.Nombre
                        </h4>
                    </a>
                    <p>
                        @item.Descripcion
                    </p>
                    @*<div class="meta-bottom d-flex justify-content-between">
                            <p><span class="lnr lnr-heart"></span> 15 Likes</p>
                            <p><span class="lnr lnr-bubble"></span> 02 Comments</p>
                        </div>*@
                </div>
            }
        </div>
    </div>
</section>
<!-- End blog Area -->