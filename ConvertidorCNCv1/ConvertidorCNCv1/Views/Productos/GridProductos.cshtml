@model List<ServicesCNC.Model.ProductoArchivos>
@{
    Layout = null;
}
<div class="content table-responsive table-full-width">
    <table class="table table-hover table-striped" id="dataTable" cellspacing="0">
        <thead>
            <tr>
                <th style="width:120px">
                    <a href="#" class="btn btn-success btn-sm" data-toggle="modal" data-target="#Modal" onclick="LoadModal()" style="color:#fff">Agregar</a>
                </th>
                <th>Archivo</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Categoría</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model)
                {
                    <td></td>
                    <td class="txt-oflo"><img src="@item.archivourl.ToString()" class="img-thumbnail img-responsive" alt=""/></td>
                    <td class="txt-oflo">@item.Productos.nombre</td>
                    <td class="txt-oflo">@item.Productos.descripcion</td>
                    <td class="txt-oflo">@ServicesCNC.Servicios.SrCoreOD.Get_Categoria((int)item.Productos.categoriaID).ToString()</td>
                    <td class="text-center">
@*                        <a href="#" class="btn btn-info btn-sm" data-toggle="modal" data-target="#ModalBig" onclick="LoadModalEdit('@item.productoID')"><span class="fa fa-edit"></span></a>*@
                        <button class="btn btn-danger btn-sm">
                            <span class="fa fa-times-circle"></span>
                        </button>
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>